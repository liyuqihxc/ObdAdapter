{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake \"MinGW Makefiles\" -DCMAKE_TOOLCHAIN_FILE=\"${workspaceRoot}\toolchain.cmake\"  ${workspaceRoot}",
            "args": [
                "-G",
                "MinGW Makefiles",
                "-DCMAKE_TOOLCHAIN_FILE=\"${workspaceRoot}\toolchain.cmake\"",
                "./.."
            ],
            "options": {
                "cwd": "${workspaceRoot}/Firmware/Build"
            },
        }
    ]
}
