    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "windows": {
                "args": [
                    "MinGW Makefiles",
                    "-DCMAKE_TOOLCHAIN_FILE='${workspaceRoot}/Firmware/toolchain-arm-none-eabi.cmake'",
                    "-DCMAKE_BUILD_TYPE=Debug",
                    "-DTOOLCHAIN_PREFIX='C:/Program Files (x86)/GNU Tools ARM Embedded/5.4 2016q3'",
                    "./.."
                ]
            },
            "linux": {
                "args": [

                ]
            },
            "options": {
                "cwd": "${workspaceRoot}/Firmware/Build"
            },
            "problemMatcher": "$gcc"
        }
    ]
}
